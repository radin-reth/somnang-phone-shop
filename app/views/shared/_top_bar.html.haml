.top-bar
  .container
    / Contact starts
    .tb-contact.pull-left
      / Email
      %i.fa.fa-envelope.color
      \&nbsp;
      %a{:href => "mailto:#{@profile.email}"}= @profile.email# limsomnang678@gmail.com
      \&nbsp;&nbsp;
      / Phone
      %i.fa.fa-phone.color
      \&nbsp; 
      = @profile.phone_number #010 200022
    / Contact ends
    / Langauge starts
    .tb-language.dropdown.pull-right
      %a{"data-target" => "#", "data-toggle" => "dropdown", :href => "#"}
        %i.fa.fa-globe
        English
        %i.fa.fa-angle-down.color
      / Dropdown menu with languages
      %ul.dropdown-menu.dropdown-mini{:role => "menu"}
        %li
          %a{:href => "#"} Hindi
        %li
          %a{:href => "#"} Tamil
        %li
          %a{:href => "#"} Kanada
    / Language ends
    / Search section for responsive design
    .tb-search.pull-left
      %a.b-dropdown{:href => "#"}
        %i.fa.fa-search.square-2.rounded-1.bg-color.white
      .b-dropdown-block
        %form{:role => "form"}
          / Input Group
          .input-group
            %input.form-control{:placeholder => "Type Something", :type => "text"}
              %span.input-group-btn
                %button.btn.btn-color{:type => "button"} Search
    / Search section ends
    / Social media starts
    .tb-social.pull-right
      .brand-bg.text-right
        / Brand Icons
        %a.facebook{:href => "#"}
          %i.fa.fa-facebook.square-2.rounded-1
        %a.twitter{:href => "#"}
          %i.fa.fa-twitter.square-2.rounded-1
        %a.google-plus{:href => "#"}
          %i.fa.fa-google-plus.square-2.rounded-1
        %a.linkedin{:href => "#"}
          %i.fa.fa-linkedin.square-2.rounded-1
        %a.pinterest{:href => "#"}
          %i.fa.fa-pinterest.square-2.rounded-1
    / Social media ends
    .clearfix