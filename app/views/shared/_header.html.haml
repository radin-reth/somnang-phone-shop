.header-2
  / Container
  .container
    .row
      .col-md-4
        / Logo section
        .logo
          %h1
            %a{:href => "index.html"}
              = image_tag "logo-phoneshop.png"
              &nbsp; Phone Shop

      .col-md-7
        / Navigation starts.
        .navy
          #menu-button Menu
          %ul.pull-right
            / Main menu
            %li
              %a.active{:href => "index.html"} Home
            %li
              %a{:href => "items-new.html"} New Products
            %li
              %a{:href => "accessory.html"} Accessory
            %li
              %a{:href => "promotion.html"} Specail Promotion
            %li
              %a{:href => "about-us.html"} About Us
            %li
              %a{:href => "contact-us.html"} Contact Us
        / Navigation ends
      .col-md-1
        / Search section
        .head-search.pull-right
          %a.b-dropdown{:href => "#"}
            %i.fa.fa-search.square-2.rounded-1.bg-color.white
          .b-dropdown-block
            %form{:role => "form"}
              / Input Group
              .input-group
                %input.form-control{:placeholder => "Type Something", :type => "text"}
                  %span.input-group-btn
                    %button.btn.btn-color{:type => "button"} Search
        / Search section ends
        .clearfix