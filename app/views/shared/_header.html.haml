.header-2
  .container
    .row
      .col-md-4
        .logo
          %h1
            = link_to root_path do
              = image_tag "logo-phoneshop.png"
              &nbsp; Phone Shop

      .col-md-7
        .navy
          #menu-button Menu
          %ul.pull-right
            %li
              = link_to t(:'nav.home'), root_path, class: "active"
            %li
              = link_to t(:'nav.new_phones'), phones_path
            %li
              = link_to t(:'nav.accessory'), accessories_path
            %li
              = link_to t(:'nav.special_promotion'), special_promotion_phones_path
            %li
              = link_to t(:'nav.about_us'), about_us_path
            %li
              = link_to t(:'nav.contact_us'), contact_us_path
      .col-md-1
        .head-search.pull-right
          %a.b-dropdown{:href => "#"}
            %i.fa.fa-search.square-2.rounded-1.bg-color.white
          .b-dropdown-block
            %form{:role => "form"}
              .input-group
                %input.form-control{:placeholder => "Type Something", :type => "text"}
                  %span.input-group-btn
                    %button.btn.btn-color{:type => "button"} Search
        .clearfix