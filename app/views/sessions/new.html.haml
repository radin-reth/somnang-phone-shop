!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %title Somnang Phoneshop Admin Panel
    = stylesheet_link_tag "login"
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Please Sign In
              
            .panel-body
              %form{:role => "form"}
              = form_tag sessions_path do
                %fieldset
                  .form-group
                    = text_field_tag :email, params[:email], class: "form-control", autofocus: "", placeholder: "E-mail", type: "email"
                  .form-group
                    = text_field_tag :password, nil, class: "form-control", placeholder: "Password", type: "password"
                  .checkbox
                    %label
                      %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}
                        Remember Me
                  = submit_tag "Login", class: "btn btn-lg btn-success btn-block"
