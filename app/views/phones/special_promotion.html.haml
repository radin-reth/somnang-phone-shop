.main-block
  = render "shared/page_heading", page_name: "Specail Promotion"

  .container
    .row
      - @phones.each do |phone|
        .col-md-3.col-sm-6
          .ecom-ui.ecom-ui-six
            %span.ecom-hot.bg-red New
            .img-container
              = link_to phone do
                - if phone.avatar?
                  = image_tag phone.avatar.url, class: "img-responsive"
                - else
                  = image_tag "ecommerce/#{ [1,2,3,4,5].sample }.png", class: "img-responsive"
            .product-details
              %h4
                = link_to phone.name, phone
                %span.pull-right.color= phone.price
              .clearfix
              %p= phone.description
            .ecom
              = link_to "Phone Detail", phone
