#bs-carousel-1.carousel.slide{"data-interval" => "5000", "data-pause" => "hover", "data-ride" => "carousel", "data-wrap" => "true"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#bs-carousel-1"}
    %li{"data-slide-to" => "1", "data-target" => "#bs-carousel-1"}
    %li{"data-slide-to" => "2", "data-target" => "#bs-carousel-1"}
  .carousel-inner
    .item.active
      = image_tag "about_us/about-office-1.jpg"
    .item
      = image_tag "about_us/about-office-2.jpg"
    .item
      = image_tag "about_us/about-office-3.jpg"
  %a.left.carousel-control{"data-slide" => "prev", :href => "#bs-carousel-1", :role => "button"}
    %span.fa.fa-chevron-left
  %a.right.carousel-control{"data-slide" => "next", :href => "#bs-carousel-1", :role => "button"}
    %span.fa.fa-chevron-right