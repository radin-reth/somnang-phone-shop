.shopping-content
  .block-heading-two
    %h3
      %span
        %i.fa.fa-laptop.color>
        &nbsp; Accessories
  .row
    - @accessories.each do |accessory|
      .col-md-4.col-sm-6
        .shopping-item
          = link_to accessory do
            = image_tag "ecommerce/headset.png", class: "img-responsive"
          %h4
            = link_to accessory.name, accessory
            %span.color.pull-right= accessory.price
          .clearfix
          .item-hover.bg-color.hidden-xs
            = link_to 'Detail accessory', accessory
          %span.hot-tag{ class: "#{['bg-red', 'bg-lblue', 'bg-green'].sample}"} NEW
  = paginate @accessories
