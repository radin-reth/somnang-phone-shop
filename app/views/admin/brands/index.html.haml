= render 'shared/admin/page_header', page_name: 'Brands List'
= flash_sucess_message
= link_to "+ Add New Brand", new_admin_brand_path, class: "btn btn-success btn-medium", type: "button"

#admin-brands-list
  .row
    - @brands.each do |brand|
      .col-xs-12.col-sm-6.col-md-4.col-lg-3
        .panel.panel-default
          .panel-heading
            %h3.panel-title
              = link_to brand.name, admin_brand_path(brand), class: "a-brand-name"
          .panel-body
            = brand.description
          .panel-footer
            %span.pull-right
              = link_to "Edit", edit_admin_brand_path(brand)
              &nbsp; &diam; &nbsp;
              = link_to "Delete", admin_brand_path(brand), method: :delete, data: { confirm: 'Are you Sure?' }
            .clearfix