.page-heading-two
  .container
    %h1 Contact Us
    .clearfix

.container
  .contact-us-two
    .row
      .col-md-5
        .contact-form
          %h5 Contact Form
          %form.form{:role => "form"}
            .form-group
              %input#name.form-control{:placeholder => "Enter Name", :type => "text"}
            .form-group
              %input#email.form-control{:placeholder => "Enter Email", :type => "text"}
            .form-group
              %textarea#comments.form-control{:placeholder => "Enter Message", :rows => "7"}
            
            %button.btn.btn-red{:type => "button"} Submit
            %button.btn.btn-default{:type => "button"} Reset
        %hr/
      .col-md-7
        .contact-map
          %h5 Locate Us
          %iframe{:frameborder => "0", :height => "450", :src => "https://www.google.com/maps/embed?pb=!1m0!3m2!1sen!2skh!4v1430438036305!6m8!1m7!1sImdmBUvVy6PpfIlc0-1KWQ!2m2!1d11.569217!2d104.927376!3f90!4f0!5f0.7820865974627469", :style => "border:0", :width => "600"}
        %hr

